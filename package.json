{
  "scripts": {
    "gitPull": "git reset --hard && git pull --rebase",
    "clean": "rimraf ./build/app/static && rimraf ./build/app/views",
    "clean:all": "npm run clean && rimraf ./build",
    "assets": "npm run clean && copyfiles -u 1 src/app/views/**/*.html src/app/static/**/* build/",
    "deploy": "npm run gitPull && npm run assets",
    "deploy:build": "npm run gitPull && npm run configure && npm run build",
    "configure": "npm install -y",
    "configure:dev": "npm install --include dev",
    "build": "tsc && npm run assets && npm run restart",
    "rebuild": "npm run build && npm run start",
    "restart": "pm2 restart build/index.js",
    "start": "pm2 start build/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "stop": "pm2 stop build/index.js"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.15",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.14.0",
    "axios": "^1.2.2",
    "body-parser": "^1.20.1",
    "bootstrap": "^5.2.3",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "ejs": "^3.1.8",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^6.8.3",
    "node-routeros": "^1.6.9",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.20",
    "object-hash": "^3.0.0",
    "qrcode": "^1.5.1",
    "rimraf": "^3.0.2",
    "telnet-client": "^2.0.8",
    "ts-md5": "^1.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
